<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:OpenDocs" 
		x:Class="OpenDocs.OpenDocsPage">

	<StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
		<Button Text="Open PDF" VerticalOptions="Center" HorizontalOptions="Center" Clicked="HandlePDF_Clicked" />
		<Button Text="Open Excel" VerticalOptions="Center" HorizontalOptions="Center" Clicked="HandleExcel_Clicked" />
		<Button Text="Open Word" VerticalOptions="Center" HorizontalOptions="Center" Clicked="HandleWord_Clicked" />
			<StackLayout Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center" Padding="0, 80, 0, 0">
				<Label x:Name="lblPlatform" Text="Platform" TextColor="Gray" FontSize="10" FontAttributes="Italic" />
				<Label x:Name="lblVersion" Text="Version" TextColor="Gray" FontSize="10" FontAttributes="Italic" />
			</StackLayout>
	</StackLayout>
</ContentPage>
